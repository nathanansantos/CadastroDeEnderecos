@using CadastroDeEnderecos.Enums
@model UsuarioModel
@{

    ViewData["Title"] = "Cadastrar usuarios";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar usuario</h1>
    <br />
</div>

<form asp-controller="Usuario" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome" asp-for="Nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="usuario">Usuário</label>
        <input type="text" class="form-control" placeholder="Digite o usuário" asp-for="Usuario">
        @Html.ValidationMessageFor(x => x.Usuario)
    </div>
    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail" asp-for="Email">
        @Html.ValidationMessageFor(x => x.Email)


    </div>
    <div class="mb-3">
        <label for="perfil">Perfil</label>
        <select class="form-control" asp-for="Perfil">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Administrador>">Administrador</option>
            <option value="@PerfilEnum.Comum">Comum</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" placeholder="Digite a senha" asp-for="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Usuario" asp-action="Index">Voltar</a>
</form>
